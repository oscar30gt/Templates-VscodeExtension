{
	"name": "quick-start-templates",
	"displayName": "Quick Start Templates",
	"description": "Quick Start allow developers to customize the initial content of the files you create in your workspace based in its extensions. You can also set custom snippets",
	"version": "1.0.1",
	"repository": {"url": "https://github.com/oscar30gt/Templates-VscodeExtension"},
	"author": {"name": "Oscargt"},
	"publisher": "Oscargt",
	"icon": "./icon128x128.png",
	"engines": {
		"vscode": "^1.94.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"activationEvents": [
		"workspaceContains:**"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "FileTemplates.loadTemplate",
				"title": "QuickStart: Paste Snippet Template"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Templates Preferences",
			"properties": {
				"quickStart.snippetTemplates": {
					"type": "array",
					"default": [],
					"description": "List of text templates",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string",
								"description": "Snippet identifier"
							},
							"templateFile": {
								"type": "string",
								"description": "File with the snippet"
							}
						},
						"required": [
							"name",
							"templateFile"
						]
					}
				},
				"quickStart.initialContentTemplates": {
					"type": "array",
					"default": [],
					"description": "List of text templates",
					"items": {
						"type": "object",
						"properties": {
							"templateFile": {
								"type": "string",
								"description": "File with the snippet"
							},
							"fileExtensions": {
								"type": "array",
								"description": "Will the existing content be removed from the file?",
								"default": [],
								"items": {
									"type": "string"
								}
							}
						},
						"required": [
							"fileExtensions",
							"templateFile"
						]
					}
				}
			}
		},
		"scripts": {
			"lint": "eslint .",
			"pretest": "npm run lint",
			"test": "vscode-test"
		},
		"devDependencies": {
			"@types/vscode": "^1.94.0",
			"@types/mocha": "^10.0.9",
			"@types/node": "20.x",
			"eslint": "^9.13.0",
			"@vscode/test-cli": "^0.0.10",
			"@vscode/test-electron": "^2.4.1"
		}
	},
	"dependencies": {
		"node": "^23.1.0",
		"vsce": "^2.15.0"
	}
}
